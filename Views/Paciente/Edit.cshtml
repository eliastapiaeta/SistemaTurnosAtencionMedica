@model Turnos.Models.Paciente

<h4>Paciente</h4>
<hr />
<div>
  <form asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="IdPaciente" />

    <div class="form-row">
      <div class="col-md-4 mb-3">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" type="text" class="form-control" placeholder="First name" required>
        <span asp-validation-for="Nombre"></span>
      </div>
      <div class="col-md-4 mb-3">
        <label asp-for="Apellido"></label>
        <input asp-for="Apellido" type="text" class="form-control" placeholder="Last name" required>
        <span asp-validation-for="Apellido"></span>
      </div>
    </div>
    <div class="form-row">
      <div class="col-md-6 mb-3">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" type="text" class="form-control" placeholder="City" required>
        <span asp-validation-for="Direccion"></span>
      </div>
      <div class="col-md-3 mb-3">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" type="text" class="form-control" placeholder="State" required>
        <span asp-validation-for="Telefono"></span>
      </div>
      <div class="col-md-3 mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="text" class="form-control" placeholder="Zip" required>
      </div>
    </div>
    <div class="form-group">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
        <label class="form-check-label" for="invalidCheck2">
          Agree to terms and conditions
        </label>
      </div>
    </div>
    <ul class="nav justify-content-end">
      <li class="nav-item mx-2">
        <button class="btn btn-primary" type="submit">Grabar</button>
      </li>
      <li class="nav-item">
        <a asp-action="Index">
          <button type="button" class="btn btn-outline-primary">Volver</button>
        </a>
      </li>
    </ul>
  </form>
</div>