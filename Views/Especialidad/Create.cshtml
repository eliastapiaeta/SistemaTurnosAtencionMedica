@model Turnos.Models.Especialidad

<div>
    <h3>Especialidad</h3>
</div>
<hr />

<div class="row">
    <div class="col s12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="input-field col s12">
                <i class="material-icons prefix">post_add</i>
                <label asp-for="Descripcion"></label>
                <input asp-for="Descripcion" type="text" class="validate">
                <span asp-validation-for="Descripcion"></span>
            </div>

            <div class="row right ">
                <div class="col s6 m6">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Grabar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
                <div class="col s6 m6">
                    <a asp-action="Index" class="btn waves-effect waves-light grey darken-4">
                        <i class="material-icons left">undo</i>Volver
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
